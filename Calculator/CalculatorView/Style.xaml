<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="NumberButtonStyle">
        <Setter Property="Button.Background" Value="Black" />
        <Setter Property="Button.Foreground" Value="White" />
        <Setter Property="Button.FontSize" Value="10" />
        <Setter Property="Button.FontWeight" Value="Bold" />
        <Setter Property="Button.Margin" Value="0.5" />
    </Style>

    <Style x:Key="MathFunctionBtnStyle">
        <Setter Property="Button.Background" Value="DimGray" />
        <Setter Property="Button.Foreground" Value="White" />
        <Setter Property="Button.FontSize" Value="22" />
        <Setter Property="Button.FontWeight" Value="Medium" />
        <Setter Property="Button.Margin" Value="1" />
    </Style>
</ResourceDictionary>